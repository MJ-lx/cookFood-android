<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.find.FindHotest">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_margin="10dp">
            <!--      九宫图-->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginBottom="20dp">
                <!--            用户信息和文本-->
                <GridLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:columnCount="3">
                    <ImageView
                        android:layout_width="50dp"
                        android:layout_height="50dp"
                        android:background="@drawable/my_circle"/>
                    <TextView android:layout_width="60dp"
                        android:layout_height="wrap_content"
                        android:textSize="18dp"
                        android:text="@string/test_text"
                        android:textColor="@color/black"
                        android:ellipsize="end"
                        android:maxLines="1"
                        android:layout_gravity="center_vertical"
                        android:layout_marginLeft="10dp"/>
                    <Button
                        android:layout_width="60dp"
                        android:layout_height="40dp"
                        android:text="关注"
                        android:textSize="18sp"
                        android:textColor="@color/white"
                        android:background="@color/darkOrange"
                        android:layout_gravity="end"/>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_columnSpan="3"
                        android:text="@string/test_text"
                        android:textSize="20dp"
                        android:textColor="@color/lightBlack"
                        android:maxLines="2"
                        android:ellipsize="end"
                        android:layout_marginTop="10dp"/>
                </GridLayout>
                <!--        图片墙-->
                <GridLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:columnCount="3"
                    android:rowCount="3"
                    android:layout_margin="10dp">
                    <ImageView
                        android:src="@mipmap/dongtai4"
                        android:layout_width="120dp"
                        android:layout_height="90dp"
                        android:scaleType="centerCrop"
                        android:layout_margin="4dp"
                        android:background="@color/lightBlack"/>
                    <ImageView
                        android:src="@mipmap/dongtai5"
                        android:layout_width="120dp"
                        android:layout_height="90dp"
                        android:scaleType="centerCrop"
                        android:layout_margin="4dp"
                        android:background="@color/lightBlack"/>
                    <ImageView
                        android:src="@mipmap/dongtai6"
                        android:layout_width="120dp"
                        android:layout_height="90dp"
                        android:scaleType="centerCrop"
                        android:layout_margin="4dp"
                        android:background="@color/lightBlack"/>
                    <ImageView
                        android:src="@mipmap/dongtai7"
                        android:layout_width="120dp"
                        android:layout_height="90dp"
                        android:scaleType="centerCrop"
                        android:layout_margin="4dp"
                        android:background="@color/lightBlack"/>
                    <ImageView
                        android:src="@mipmap/dongtai8"
                        android:layout_width="120dp"
                        android:layout_height="90dp"
                        android:scaleType="centerCrop"
                        android:layout_margin="4dp"
                        android:background="@color/lightBlack"/>
                    <ImageView
                        android:src="@mipmap/dongtai9"
                        android:layout_width="120dp"
                        android:layout_height="90dp"
                        android:scaleType="centerCrop"
                        android:layout_margin="4dp"
                        android:background="@color/lightBlack"/>
                    <ImageView
                        android:src="@mipmap/dongtai10"
                        android:layout_width="120dp"
                        android:layout_height="90dp"
                        android:scaleType="centerCrop"
                        android:layout_margin="4dp"
                        android:background="@color/lightBlack"/>
                    <ImageView
                        android:src="@mipmap/dongtai11"
                        android:layout_width="120dp"
                        android:layout_height="90dp"
                        android:scaleType="centerCrop"
                        android:layout_margin="4dp"
                        android:background="@color/lightBlack"/>
                    <ImageView
                        android:src="@mipmap/dongtai12"
                        android:layout_width="120dp"
                        android:layout_height="90dp"
                        android:scaleType="centerCrop"
                        android:layout_margin="4dp"
                        android:background="@color/lightBlack"/>
                </GridLayout>
                <!--            点评区-->
                <GridLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:columnCount="4">
                    <ImageButton
                        android:layout_width="30dp"
                        android:layout_height="30dp"
                        android:src="@drawable/dianzan"
                        android:scaleType="centerCrop"
                        android:background="@color/transparent"/>
                    <TextView
                        android:layout_width="30dp"
                        android:layout_height="20dp"
                        android:text="1234"
                        android:layout_gravity="center_vertical"
                        android:paddingLeft="5dp"
                        android:layout_marginRight="20dp"/>
                    <ImageButton
                        android:layout_width="30dp"
                        android:layout_height="30dp"
                        android:src="@drawable/pinglun"
                        android:scaleType="centerCrop"
                        android:background="@color/transparent"/>
                    <TextView
                        android:layout_width="30dp"
                        android:layout_height="20dp"
                        android:text="1234"
                        android:layout_gravity="center_vertical"
                        android:paddingLeft="5dp"/>
                    <!--                评论显示区-->
                    <GridLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:columnCount="2"
                        android:layout_columnSpan="4"
                        android:layout_margin="10dp">
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="1dp"
                            android:background="@color/grayo"
                            android:layout_columnSpan="2"
                            android:layout_gravity="fill"
                            android:layout_marginBottom="2dp"/>
                        <TextView
                            android:layout_width="70dp"
                            android:layout_height="wrap_content"
                            android:textColor="@color/lightBlack"
                            android:text="@string/test_text"
                            android:maxLines="1"
                            android:ellipsize="end"
                            android:textSize="16dp"
                            android:layout_gravity="center_vertical"/>
                        <TextView
                            android:width="300dp"
                            android:layout_height="wrap_content"
                            android:text="@string/test_text"
                            android:textColor="@color/gray"
                            android:textSize="14dp"
                            android:layout_gravity="center_vertical"
                            android:maxLines="1"
                            android:ellipsize="end"/>

                    </GridLayout>
                    <ImageView
                        android:layout_width="30dp"
                        android:layout_height="30dp"
                        android:background="@drawable/my_circle"
                        android:layout_gravity="center_vertical"/>
                    <EditText
                        android:layout_width="250dp"
                        android:layout_height="25dp"
                        android:layout_columnSpan="3"
                        android:background="@drawable/round"
                        android:layout_marginLeft="12dp"
                        android:hint="写评论……"
                        android:textColorHint="@color/gray"
                        android:textSize="12dp"
                        android:paddingLeft="10dp"
                        android:layout_gravity="center_vertical"/>
                </GridLayout>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="2021-04-14"
                    android:textColor="@color/grayo"
                    android:textSize="12dp"/>
            </LinearLayout>
            <!--      四宫图-->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginBottom="20dp">
                <!--            用户信息和文本-->
                <GridLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:columnCount="3">
                    <ImageView
                        android:layout_width="50dp"
                        android:layout_height="50dp"
                        android:background="@drawable/my_circle"/>
                    <TextView android:layout_width="60dp"
                        android:layout_height="wrap_content"
                        android:textSize="18dp"
                        android:text="@string/test_text"
                        android:textColor="@color/black"
                        android:ellipsize="end"
                        android:maxLines="1"
                        android:layout_gravity="center_vertical"
                        android:layout_marginLeft="10dp"/>
                    <Button
                        android:layout_width="60dp"
                        android:layout_height="40dp"
                        android:text="关注"
                        android:textSize="18sp"
                        android:textColor="@color/white"
                        android:background="@color/darkOrange"
                        android:layout_gravity="end"/>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_columnSpan="3"
                        android:text="@string/test_text"
                        android:textSize="20dp"
                        android:textColor="@color/lightBlack"
                        android:maxLines="2"
                        android:ellipsize="end"
                        android:layout_marginTop="10dp"/>
                </GridLayout>
                <!--        图片墙-->
                <GridLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:columnCount="2"
                    android:rowCount="2"
                    android:layout_margin="10dp">
                    <ImageView
                        android:src="@mipmap/dongtai3"
                        android:layout_width="120dp"
                        android:layout_height="90dp"
                        android:scaleType="centerCrop"
                        android:layout_margin="4dp"
                        android:background="@color/lightBlack"/>
                    <ImageView
                        android:src="@mipmap/dongtai3"
                        android:layout_width="120dp"
                        android:layout_height="90dp"
                        android:scaleType="centerCrop"
                        android:layout_margin="4dp"
                        android:background="@color/lightBlack"/>
                    <ImageView
                        android:src="@mipmap/dongtai2"
                        android:layout_width="120dp"
                        android:layout_height="90dp"
                        android:scaleType="centerCrop"
                        android:layout_margin="4dp"
                        android:background="@color/lightBlack"/>
                    <ImageView
                        android:src="@mipmap/dongtai1"
                        android:layout_width="120dp"
                        android:layout_height="90dp"
                        android:scaleType="centerCrop"
                        android:layout_margin="4dp"
                        android:background="@color/lightBlack"/>

                </GridLayout>
                <!--            点评区-->
                <GridLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:columnCount="4">
                    <ImageButton
                        android:layout_width="30dp"
                        android:layout_height="30dp"
                        android:src="@drawable/dianzan"
                        android:scaleType="centerCrop"
                        android:background="@color/transparent"/>
                    <TextView
                        android:layout_width="30dp"
                        android:layout_height="20dp"
                        android:text="1234"
                        android:layout_gravity="center_vertical"
                        android:paddingLeft="5dp"
                        android:layout_marginRight="20dp"/>
                    <ImageButton
                        android:layout_width="30dp"
                        android:layout_height="30dp"
                        android:src="@drawable/pinglun"
                        android:scaleType="centerCrop"
                        android:background="@color/transparent"/>
                    <TextView
                        android:layout_width="30dp"
                        android:layout_height="20dp"
                        android:text="1234"
                        android:layout_gravity="center_vertical"
                        android:paddingLeft="5dp"/>
                </GridLayout>
            </LinearLayout>
        </LinearLayout>
    </ScrollView>

</FrameLayout>